{
    // clandd
    "clangd.path": "/home/zfadli/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/10.0.0/clangd_10.0.0/bin/clangd",
    "clangd.trace": "/home/zfadli/clangd_logs",

    // Git
    "git.autofetch": true,

    // Yaml
    "yaml.schemas": {
        "file:///home/zfadli/.vscode/extensions/atlassian.atlascode-2.10.12/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },

    // Jira
    "atlascode.jira.enabled": true,
    "atlascode.bitbucket.enabled": false,
    "atlascode.jira.jqlList": [
        {
            "id": "966b27b7-9ddd-48f5-ae9c-6bf61a782fac",
            "enabled": true,
            "name": "My netatmo Issues",
            "query": "assignee = currentUser() AND resolution = Unresolved ORDER BY lastViewed DESC",
            "siteId": "432c6ffe-3b52-4248-893d-d501ee303de1",
            "monitor": true
        }
    ],
    "redhat.telemetry.enabled": false,

    // Workbench
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.colorTheme": "Visual Studio Dark",

    // C CPP
    "C_Cpp.dimInactiveRegions": false,
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.intelliSenseEngine": "Disabled",

    // VIM 
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,

    "vim.leader": ",",
    "vim.handleKeys": { // if false == ignored by vim
      "<C-a>": false,
      "<C-k>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
    // Search
    {
    // Rg tigger with current word as input
    "before": ["<leader>", "f"],
    "commands": ["editor.action.addSelectionToNextFindMatch", "workbench.action.findInFiles"]
    },
    {
    // Rg tigger with manual input
    "before": ["<C-f>"],
    "commands": ["workbench.action.findInFiles"]
    },

    {
    // Window explorer open
    "before": ["<C-n>"],
    "commands": ["workbench.view.explorer"]
    },
    {
    // close tab
    "before": ["<leader>", "w"],
    "commands": ["workbench.action.closeActiveEditor"]
    },

    // Git
    {
    // file history
    "before": ["<leader>", "g", "h"],
    "commands": ["gitlens.views.fileHistory.focus"]
    },
    {
    // commit history
    "before": ["<leader>", "g", "h", "l"],
    "commands": ["gitlens.views.lineHistory.focus"]
    },
    {
    // commit history
    "before": ["<leader>", "g", "l"],
    "commands": ["gitlens.views.commits.focus"]
    }
    ],
    "window.zoomLevel": -1,
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    },
    "cmake.configureOnOpen": true,
    "makefile.buildBeforeLaunch": false,

    // TO SORT
}